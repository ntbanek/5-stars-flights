<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <link rel="stylesheet" href="./../assets/css/index.css">
</head>
<body>
    <%- include('login'); -%>
    <h1>Strona główna</h1>
    <a href="/signup">Przejdź do rejestracji</a>
    <form action="/getFlightData" method="get">
        <label for="departure_airport">Miejsce wylotu</label>
        <select name="departure" id="departure_airport"></select>
        <label for="destination">Miejsce docelowe</label>
        <select name="destination" id="destination_airport"></select>
        <label for="passengers_number">Liczba pasażerów</label>
        <select name="passengers" id="passengers_number">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
            <option value="6">6</option>
        </select>
        <label for="date_from">Wylot od:</label>
        <input type="date" name="date_from" id="date_from" value="<%= searchData ? searchData.date_from : '2022-04-01' %>">
        <label for="date_to">Do:</label>
        <input type="date" name="date_to" id="date_to" value="<%= searchData ? searchData.date_to : '2023-12-31' %>">
        <button type="submit">Wyszukaj lot</button>
    </form>
    <div>  
    <ul>
        <% flightData ? flightData.forEach(function(flight, i) { %>
          <li>
            <%= i+1 %>
            <a href="/flightDetails?flightId=<%= flight._id %>&passengers=<%= searchData.passengers %>">
            <strong>From: <%= flight.departure_airport %> - To: <%= flight.destination_airport %></strong>
            Date: <%= flight.date %>,
            Price: <%= flight.price_euro %> €
            </a>
          </li>
        <% }) : flightData; %>
      </ul>
    </div>
    </body>
    <button id="login_btn">Login</button>
    <script src="./../js/index.js"></script>
    <script>
        if ('<%= searchData %>') {
            document.getElementById('departure_airport').value = '<%= searchData.departure %>';
            document.getElementById('destination_airport').value = "<%= searchData.destination %>";
            document.getElementById('passengers_number').value = "<%= searchData.passengers %>";
        }
    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>

